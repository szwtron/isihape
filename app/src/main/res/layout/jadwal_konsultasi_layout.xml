<TableRow  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12">

        <TextView
            android:id="@+id/tvTanggalKonsultasi"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:text="Test1"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvDokterKonsultasi"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="4"/>

        <TextView
            android:id="@+id/tvDokterKonsultasi"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:text="Test1"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvTanggalKonsultasi"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="4"/>

        <TextView
            android:id="@+id/tvWaktuKonsultasi"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:text="Test1"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="2"/>

        <ImageButton
            android:id="@+id/btnDeleteKonsultasi"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#e61e1e"
            android:src="@drawable/delete"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnApproveKonsultasi"
            app:layout_constraintStart_toEndOf="@+id/tvWaktuKonsultasi"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnApproveKonsultasi"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#00FF00"
            android:src="@drawable/approveresized"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnDeleteKonsultasi"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"/>

    </LinearLayout>

</TableRow>
